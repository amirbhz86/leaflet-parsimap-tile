{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "src/types/*"
    ],
    "paths": {
      "@interfaces/*": [
        "interfaces/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
